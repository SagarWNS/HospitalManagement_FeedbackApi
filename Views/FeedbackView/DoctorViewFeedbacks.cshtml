@model List<HospitalManagement.FeedbackApi.Models.Feedbacks>

@{
    ViewData["Title"] = "Doctor Feedbacks";
    var doctorId = ViewBag.DoctorId;
}

<h2>Your Feedbacks</h2>

@if (Model.Count == 0)
{
    <p>No feedbacks found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Rating</th>
                <th>Comments</th>
                <th>SubmittedAt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fb in Model)
            {
                <tr>
                    <td>@fb.Patient?.Name</td>
                    <td>@fb.Rating</td>
                    <td>@fb.Comments</td>
                    <td>@fb.SubmittedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
